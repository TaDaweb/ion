    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "remotePath": "",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${workspaceRoot}/providers",
            "envFile": "${workspaceRoot}/.vscode/private.env",
            "args": [
                "-test.v",  
                "-test.timeout",
                "5m"
            ],
            "showLog": true
        },
        {
            "name": "Debug Launch",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "remotePath": "",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${workspaceRoot}",
            "envFile": "${workspaceRoot}/.vscode/private.env",
            "args": [
                "--provider",
                "azurebatch",
                "--taint",
                "NoSchedule"
            ],
            "showLog": true
        }
    ]
}